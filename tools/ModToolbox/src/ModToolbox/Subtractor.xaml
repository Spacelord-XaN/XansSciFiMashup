<UserControl x:Class="ModToolbox.Subtractor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="textBoxInputMain" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />

        <Button x:Name="buttonSubtract" Grid.Row="1" Content="Subtract" Click="ButtonSubtractClick" />

        <TextBox x:Name="textBoxInputSubtract" Grid.Row="2" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />

        <Button x:Name="buttonCopyResultToClipboard" Grid.Row="3" Content="Copy result to clipboard" Click="ButtonCopyResultToClipboardClick" />
    </Grid>
</UserControl>

