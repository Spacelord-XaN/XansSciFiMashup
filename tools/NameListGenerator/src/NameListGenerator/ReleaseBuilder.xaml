<UserControl x:Class="NameListGenerator.ReleaseBuilder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Repo Path:" VerticalAlignment="Center" Margin="3" />
        <TextBox x:Name="textBoxRepository" Grid.Column="1" Text="d:\privat\development\git\XansSciFiMashup\" />
        <Button x:Name="buttonMakeRelease" Grid.Column="2" Content="Release" Click="ButtonMakeReleaseClick" />

        <TextBox x:Name="textBoxOutput" Grid.Row="1" Grid.ColumnSpan="3" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
    </Grid> 
</UserControl>
